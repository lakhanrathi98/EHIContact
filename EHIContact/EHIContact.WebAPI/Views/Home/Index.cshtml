@model IEnumerable<EHIContact.Core.Models.Contact>
@{
    ViewBag.Title = "Contact Home";
}

<h2>Contact</h2>
<br />
<br />

<button class="btn btn-primary">Add New</button>
<br />
<br />

<table id="tblContact" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
        </tr>
    </thead>
</table>

@section scripts{
    <link href="~/Content/DataTablesPlugin.css" rel="stylesheet" />
    <script src="~/Scripts/DataTablesPluginScript.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tblContact").DataTable({
                ajax: {
                    url: "api/contacts/GetAllContacts",
                    dataSrc: ""
                },
                columns:
                [
                    {data : "FirstName"},
                    {data: "LastName"},
                    {data: "Email"},
                    {data: "PhoneNumber"}
                ]
            });
        });
    </script>
}
